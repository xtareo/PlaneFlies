{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug DinosaurRun",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/DinosaurRun.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
